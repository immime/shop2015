	.title_manjian{
		@include active_tags();
	}

	.title_manzhen{
		@include active_tags(#66cc00);
	}

	.title_huangou{
		@include active_tags(#0080cc);
	}

	.active_info{
		color:$color_999;
		em{
			color:#ee5533;
		}
	}
	.product_img{
		@extend %inline-block;
		width:80px;
		height:80px;
		border:1px solid #e6e6e6;
		padding:3px 0;
		text-align: center;
	}
	.product_name{
		font-size: 12px;
		color:$color_333;
		line-height: 22px;
		display: block;
		margin-bottom:10px;
	}
	.product_price{
		color:#999999;
	}
	.product_operation{
		color:#999999;
		margin-bottom:5px;
	}
	.cart_column_02{
		text-align: left;
	}
	.product_youhuiprice{
		@extend %inline-block;
		text-align: center;
		border:1px dashed #ee5533;
		padding:1px 20px;
		color:#ee5533;
	}
	.product_total_origin{
		margin-top:10px;
		text-decoration: line-through;
		color:$color_999;
	}

	.tags{
		@include tags();
	}
	.title_tags{
		@include title_tags(#ee5533);
		cursor: pointer;
	}

	//赠品列表
	.present_list{
		@extend .clearfix;
		.tag_zengpin{
			@include title_tags(#66cc00,true);
		}
		.present_img{
			@extend %inline-block;
			border:1px solid #e6e6e6;
			padding:3px 0;
			margin-left:10px;
		}
		.tag_huangou{
			@include title_tags(#0080cc,true);
		}
	}

	//优惠信息
	.youhui_active{
		// position: relative;
		background:#ee5533;
		color:#FFF;
		.youhui_active_title{
			padding:5px;
			padding-top:3px;
			em{
				@include triangle(top,4px,#FFF);
				&.active{
					@include triangle(bottom,4px,#FFF);
				}
			}
		}
		.youhui_active_info{
			position: absolute;
			left:0px;
			top:0px;
			// display: none;
		}
	}

}

