//价格修改器
.product_price_modify{
	@extend .clearfix;
	width:76px;
	border:1px solid #cccccc;
	.decrease,.product_nums,.increase{
		// @extend %inline-block;
		float: left;
	}
	.decrease,.increase{
		width:17px;
		height:20px;
		background-position:-10px -160px;
	}
	.increase{
		background-position:-30px -160px;
	}
	.product_nums{
		width:40px;
		height: 20px;
		text-align: center;
		line-height: 20px;
		border-left:1px solid #cccccc;
		border-right:1px solid #cccccc;
		color:$color_333;
		font-size: 12px;
	}
}

