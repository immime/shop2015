@charset "utf-8";
@import "../common/var";
@import "../common/_function";

@mixin active_tags($color:#ee5533){
	@extend %inline-block;
	background:$color;
	padding:4px 8px;
	color:#FFF;
	position: relative;
	em{
		@extend %inline-block;
		width: 0;
	    height: 0;
	    border-top: 6px solid $color;
	    border-right: 6px solid transparent;
	    position: absolute;
	    left:0;
	    top:22px;
	}
}

@mixin tags($color:#ee5533,$bg:false,$bgcolor:#FFF){
	@if $bg == true{
		background:$bgcolor;
	}
	@extend %inline-block;
	border:1px solid $color;
	color:$color;
	padding:3px 6px;
	margin-right:5px;
}

@mixin title_tags($bgcolor,$small:false){
	padding:3px 10px;
	background: $bgcolor;
	color:#FFF !important;
	@if $small == true{
		padding:2px;
	}
}

